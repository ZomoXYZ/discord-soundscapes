{
    "compilerOptions": {
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "lib": [ "ES2020" ],
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": [
        "src/*",
        "src/**/*"
    ]
}